<?xml version="1.0"?>
<configuration>
  <system.web>
    <compilation debug="true" targetFramework="4.5" />
    <httpRuntime targetFramework="4.5" />
  </system.web>

  <appSettings>
    <!-- This will turn on detailed errors when deployed to remote servers -->
    <!-- This setting is not recommended for production -->
    <add key="K_DETAILED_ERRORS" value="true" />
  </appSettings>

  <connectionStrings>
    <!-- LocalDB database must be shared and running. -->
    <add name="DefaultConnection" connectionString="Server=(localdb)\.\IIS_DB;Database=MusicStore;Trusted_Connection=True;MultipleActiveResultSets=true"/>
  </connectionStrings>
</configuration>